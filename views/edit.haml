.container-fluid
  .row-fluid
    .col-md-6.col-md-offset-3
      %a.btn.btn-info.pull-left.btn-sm{href:'#', onclick: 'history.back(); return false;'} < Back
      %br
      %h2
        Edit Your Video
  .row-fluid
    .col-md-6.col-md-offset-3
      %form{action:'/update',method:'post', role:'form'}
        .form-group
          %label{for:'title'} Title
          %input.form-control{type:'text', name:'title', id:'title', value:@info['title']}
        .form-group
          %label{for:'description'} Description
          %textarea.form-control{rows:'3', type:'text', name:'description', id:'description'}= @info['description']
        %br
        %input{type:'hidden', name:'vid_id', id:'vid_id', value:@id}
        %input.btn.btn-default{type:'submit',value:'Save'}
