<%= erb :header %>

  <h2>Your Videos</h2>

  <ul class="media-list">
    <% @videos.each do |video| %>
    <li class="media">
      <a class="pull-left" href="/view/<%= video['id']%>">
        <img class="media-object" src="<%= video['thumbnails']['thumbnail'][0]['_content'] %>" alt="...">
      </a>
      <div class="media-body">
        <h4 class="media-heading"><%= video['title'] %></h4>
        <p><%= video['description'] %></p>
        <p><%= video['upload_date'] %></p>
      </div>
    </li>
    <% end %>
  </ul>

  <p><%= @videos %></p>
<%= erb :footer %>
